//Colours
$grey = #777
$greyTransparent = rgba(99, 99, 99, 0.3)
$liteGrey = #cdd
$red = #c24
$white = #fff
//menu
$margin = 1.5em
$halfMargin = $margin/2
$menuPadding = $margin/6
$bigPadding = $margin/3
$fatWidth = 2px
$fatBorder = $fatWidth solid
$thinBorder = 1px solid
body
	font-family: "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif

//About images
.builtWith
	background: $white
	display: inline-block
	padding: $bigPadding $bigPadding .2em
	a
		margin: .3em

a:hover
	color: $text

//Tables
table
	border-collapse: collapse
	width: 100%

	th, thead td
		font-weight: 700
		text-align: left

	&:not(.printCards) tr
		border-bottom: $thinBorder #555

	&:not(.enterShots) th:not(:empty)
		cursor: pointer

.asc, .desc, legend u
	border-color: $blue
	color: $blue

.asc
	background: url(/svg/asc.svg) no-repeat right

.desc
	background: url(/svg/desc.svg) no-repeat right

.tick
	background: url(/svg/tick.svg) no-repeat center

[src="/svg/logo.svg"]
	width: 210px
	height: 25px

body > form, table:not(.printCards)
	margin-bottom: 1em

//Forms
legend
	font-size: $margin
	font-weight: 700

fieldset
	label, button
		float: left

	label:not(:last-child)
		margin: 0 $margin $menuPadding*3 0

	input, select
		display: block

	button
		margin-top: 1em

	button:not(:last-child)
		margin-right: $margin

input, select
	border: $thinBorder
	border-radius: $menuPadding
	padding: $menuPadding

[type=checkbox]
	$size = 2.2em
	height: $size
	margin: 0
	width: $size

::-webkit-search-cancel-button
	cursor: pointer
	opacity: 1 !important
	pointer-events: auto !important

select[required] option:empty
	display: none

label select
	width: 100%

samp:not([hidden])
	color: $red
	display: block

button
	background: transparent
	border: $fatBorder $blue
	border-radius: $bigPadding
	color: $blue
	cursor: pointer
	padding: $bigPadding

:focus
	box-shadow: .2em .2em .3em $blue

input.dirty:not(:focus)
	&:invalid
		background-color: $invalid

	&:valid
		background-color: $valid

form#edit:target
	display: block

//Horizontal Menu
@media not print
	html
		background: url(/svg/shooter.svg) bottom left no-repeat
		background-attachment: fixed
		background-size: 14em

	nav
		display: flex
		ul
			list-style: none

		& > ul > li
			display: inline-block
			position: relative

		ul
			a
				display: block

			ul a
				display: block
				padding: .3em 0

		li
			padding: .5em
			ul
				background: $background
				box-shadow: .1em .1em 6px $blue
				display: none
				position: absolute
				//z-index: 1

		li:hover
			ul
				display: block
				padding: .3em

	legend
		color: $grey

	table:not(.scorecards):not(.printCards) tbody tr:nth-child(2n)
		background: $greyTransparent

	th.asc, th.desc
		border-bottom: $thinBorder

//Text
h1,h2,h3,h4
	margin: 0

h4
	color: $base-color

#map
	height: 350px

.small
	font-size: .7em

a, header li
	color: $blue
	text-decoration: none

.clear
	clear: both

.right
	float: right

.bold
	font-weight: bold

.center, .centerPadding
	text-align: center

.barcode
	image-rendering: pixelated
	width: 80px

.centerPadding
	padding: 1em

.events
	div
		display: inline-block
		margin-bottom: $bigPadding
		width: 100%
		div
			background: $background
			border: $thinBorder $bgGrey
			float: left
			margin-right: $bigPadding
			text-align: center
			width: 130px
	b
		display: block
		font-size: 26px
		line-height: 23px
	p
		border-bottom: $thinBorder $bgGrey
		margin: 0
		padding: 0 $bigPadding

[data-s] tbody td:last-of-type:empty
	background: url(/svg/edit.svg) center center no-repeat
	cursor: pointer

.printCards tr:nth-child(3n):not(:last-child)
	border-bottom: $thinBorder

.popup
	background: url(/svg/speechBubble.svg) no-repeat
	color: $white
	padding: $margin $halfMargin $halfMargin
	position: absolute
	right: 2*$margin
	text-align: center

abbr
	color: $blue
	cursor: help
	font-weight: 900
	line-height: 1em

@media print
	nav
		display: none

	.printCards
		tr
			border: 0

	.printCards tr:nth-child(3n):not(:last-child)
		border-bottom-color: $bgGrey

@require enterShots

.arrows
	cursor: pointer
	display: inline-block
	height: 1em
	width: 1em